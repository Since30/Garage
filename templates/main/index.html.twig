{% extends 'base.html.twig' %}



{% block body %}
    <header>
        <img class="w-100 " src="{{ asset('assets/pictures/Banniere AUto.png') }}">
    </header>
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Site garage V.Parrot</h1>
                <p>Bienvenue sur le site du garage V.Parrot</p>
            </div>
            {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12">
                        <h2>{{ category.name }}</h2>
                </div>
                    {% else %}
                    <div class="col-3 my-3">
                        <div class="card bg-body-secondary h-100" style="width: 18rem;">
                            <!--<img src="..." class="card-img-top" alt="..."-->
                            <div class="card-body">
                                <h3 class="card-title">{{ category.name }}</h3>
                                <a href="{{ path('categories_list',{slug: category.slug}) }}" class="btn btn-primary">voir les mod√®les</a>
                            </div>
                        </div>

                    </div>
                {% endif %}
            {% endfor %}

        </section>
    </main>

{% endblock %}
